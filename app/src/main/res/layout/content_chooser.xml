<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.roberts.adrian.statsnaillogger.activities.ChooserActivity"
    tools:showIn="@layout/activity_chooser"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/open_weighing_button"
        android:text="WEIGHING"
        android:layout_marginBottom="28dp"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/open_grading_button"
        android:text="GRADING"
       />
</LinearLayout>
